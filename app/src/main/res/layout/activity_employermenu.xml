<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/postjobconlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.Employermenu">


    <include
        android:id="@+id/toolbar_empMenu"
        layout="@layout/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <Button
        android:id="@+id/company_profile_btn"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="218dp"
        android:text="@string/companyprofile"
        android:textAlignment="center"
        app:icon="@drawable/profileicon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.564"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnpostjob"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="POST A NEW JOB"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:icon="@drawable/job"
        app:layout_constraintEnd_toEndOf="@+id/company_profile_btn"
        app:layout_constraintStart_toStartOf="@+id/company_profile_btn"
        app:layout_constraintTop_toBottomOf="@+id/company_profile_btn" />

    <Button
        android:id="@+id/viewPostedJobs"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/viewpostedjobs"
        android:textAlignment="center"
        app:icon="@drawable/job"
        app:layout_constraintEnd_toEndOf="@+id/btnpostjob"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnpostjob"
        app:layout_constraintTop_toBottomOf="@+id/btnpostjob" />




</androidx.constraintlayout.widget.ConstraintLayout>